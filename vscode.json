{
    "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript][svelte][typescript][typescriptreact]": {
      "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
      }
    },
    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
      "editor.defaultFormatter": "vscode.markdown-language-features"
    },
    "[postcss]": {
      "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "[typescript]": {
      "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
      "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
      },
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cSpell.language": "en,ru",
    "cSpell.userWords": [
      "andrey",
      "brotli",
      "brotlied",
      "browserslist",
      "catched",
      "CRDT",
      "esbuild",
      "globby",
      "gzipped",
      "logux",
      "nanodelay",
      "nanoevents",
      "nanospy",
      "nanostores",
      "oklab",
      "oklch",
      "pico",
      "pnpm",
      "Preact",
      "preadd",
      "sharec",
      "sitnik",
      "slowreader",
      "stylelint",
      "subprotocol",
      "unloadable",
      "vite",
      "Weblate"
    ],
    "css.validate": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "never"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.fontFamily": "JetBrains Mono",
    "editor.formatOnSave": true,
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.renderWhitespace": "selection",
    "editor.rulers": [
      80
    ],
    "editor.suggestSelection": "first",

    "eslint.useFlatConfig": true,
    "eslint.migration.2_x": "off",
    "eslint.probe": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "html",
      "vue",
      "markdown",
      "svelte"
    ],
    "eslint.run": "onSave",
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "svelte"
    ],
    "extensions.ignoreRecommendations": true,
    "files.associations": {
      "**/test/*.errors.ts": "rust",
      "*.bu": "yaml",
      "*.css": "postcss",
      "*.desktop": "ini",
      "*.ign": "json",
      "*.service": "ini",
      "*.timer": "ini",
      ".stylelintrc": "json",
      ".tool-versions": "dotenv",
      "errors.ts": "rust",
      "errors.tsx": "rust"
    },
    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "languageToolLinter.languageTool.disabledRules": "COMMA_PARENTHESIS_WHITESPACE,UPPERCASE_SENTENCE_START,CONSECUTIVE_SPACES,WHITESPACE_RULE,UNLIKELY_OPENING_PUNCTUATION",
    "languageToolLinter.languageTool.language": "en",
    "languageToolLinter.languageTool.motherTongue": "ru-RU",
    "languageToolLinter.lintOnOpen": true,
    "less.validate": false,
    "markdown.extension.toc.levels": "2..3",

    "prettier.arrowParens": "avoid",
    "prettier.quoteProps": "consistent",
    "prettier.requireConfig": true,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.trailingComma": "none",
    "projectManager.git.baseFolders": [
      "/home/rtx/sources/"
    ],
    "projectManager.git.maxDepthRecursion": 1,
    "remote.downloadExtensionsLocally": true,
    "scss.validate": false,
    "security.workspace.trust.untrustedFiles": "newWindow",
    "stylelint.config": {
      "run": "onSave"
    },
    "svelte.enable-ts-plugin": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "300",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.autoDetectColorScheme": true,
    "window.commandCenter": true,
    "window.customTitleBarVisibility": "auto",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.panel.opensMaximized": "never",
    "workbench.preferredDarkColorTheme": "Adwaita Dark",
    "workbench.preferredLightColorTheme": "Adwaita Dark & Github syntax highlighting",
    "workbench.statusBar.visible": false,
    "editor.fontSize": 12,
    "git.autofetch": true,
    "workbench.iconTheme": "material-icon-theme",
    "eslint.validate": ["javascript"],
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "workbench.startupEditor": "none",
}
